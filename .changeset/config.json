{
  "$schema": "https://unpkg.com/@changesets/config@2.3.0/schema.json",
  "changelog": ["@changesets/changelog-github", { "repo": "kamilkisiela/apollo-angular" }],
  "commit": false,
  "access": "public",
  "baseBranch": "master",
