{
  "name": "apollo-angular-monorepo",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "website"
    ]
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "ci-only:integration": "./scripts/integration tests",
    "deploy": "yarn workspaces run deploy",
    "format": "prettier --write \"packages/**/*.ts\"",
    "now-build": "(cd website && yarn && yarn build && mv build ../public)",
    "prebuild": "rimraf packages/*/build/",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.1.5",
    "@angular-devkit/core": "^15.1.5",
    "@angular-devkit/schematics": "^15.1.5",
    "@angular/animations": "^15.1.4",
    "@angular/cli": "^15.1.5",
    "@angular/common": "^15.1.4",
    "@angular/compiler": "^15.1.4",
    "@angular/compiler-cli": "^15.1.4",
    "@angular/core": "^15.1.4",
    "@angular/platform-browser": "^15.1.4",
    "@angular/platform-browser-dynamic": "^15.1.4",
    "@angular/platform-server": "^15.1.4",
    "@angular/router": "^15.1.4",
    "@apollo/client": "^3.7.7",
    "@babel/core": "^7.17.4",
    "@babel/preset-env": "^7.16.11",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@schematics/angular": "^15.0.0",
    "@theguild/prettier-config": "^1.1.2",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "babel-jest": "^29.4.2",
    "browserlist": "^1.0.1",
    "cpx": "^1.5.0",
    "graphql": "^16.6.0",
    "husky": "^8.0.3",
    "jest": "^29.4.2",
    "jest-preset-angular": "^13.0.0",
    "jest-zone-patch": "^0.0.10",
    "lint-staged": "^13.1.2",
    "ng-packagr": "^15.1.2",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "rimraf": "^4.1.2",
    "rxjs": "^7.8.0",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.0.5",
    "tslib": "^2.3.0",
    "typescript": "^4.8.4",
    "zone.js": "~0.13.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/{src,tests}/**/*.ts": [
      "prettier --write"
    ]
  }
}
